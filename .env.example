# --- API config ----------------------------------------------------
NC_API_BASE_URL="https://nctvapi.n-compass.online"
NC_API_USERNAME="your-api-username@example.com"
NC_API_PASSWORD="your-api-password"

# --- Google Sheets -------------------------------------------------
# Service account JSON file (path relative to project root or absolute)
SHEETS_CREDENTIALS_FILE="client_secret.json"

# Target spreadsheet ID for monitoring (the big one that holds
# zone sheets and screenshot health sheets)
SHEETS_SPREADSHEET_ID="your-google-sheet-id-here"

# --- Socket server -------------------------------------------------
# Typically your nctvsocket URL
SOCKET_URL="https://nctvsocket.n-compass.online"

# --- Version expectations ------------------------------------------
# Used by checks/version_by_zone.py
EXPECTED_SERVER_VERSION="2.9.4"
EXPECTED_UI_VERSION="3.0.47"

# --- Agent role flag -----------------------------------------------
# false  -> cloud worker only (screenshot + version-by-zone)
# true   -> + AnyDesk jobs (when we implement them) on a Windows agent
ANYDESK_AGENT="false"
